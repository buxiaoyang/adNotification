<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - 金硕源CRM</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="" />
    <meta name="author" content="金硕源CRM" />
    <link type="text/css" href="~/Styles/bootstrap.min.css" rel="stylesheet" />
    <link type="text/css" href="~/Styles/bootstrap-responsive.min.css" rel="stylesheet">
    <link type="text/css" href="~/Styles/jquery-ui-1.10.0.custom.css" rel="stylesheet" />
    <link type="text/css" href="~/Styles/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Styles/docs.css" />
    <link rel="shortcut icon" href="~/Images/logomini.png" />
    <script src="~/Scripts/jquery-1.9.0.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ui-1.10.0.custom.min.js" type="text/javascript"></script>
    <script src="~/Scripts/WdatePicker.js" type="text/javascript"></script>
    <script src="~/Scripts/5kcrm_zh-cn.js" type="text/javascript"></script>
    <script src="~/Scripts/5kcrm.js" type="text/javascript"></script>
    <!--[if lte IE 6]><link rel="stylesheet" type="text/css" href="~/Styles/bootstrap-ie6.css"><![endif]-->
    <!--[if lte IE 7]><link rel="stylesheet" type="text/css" href="~/Styles/ie.css"><![endif]-->
    <!--[if IE 7]><link rel="stylesheet" type="text/css" href="~/Styles/font-awesome-ie7.min.css" /><![endif]-->
    <!--[if lt IE 9]><link type="text/css" href="~/Styles/jquery.ui.1.10.0.ie.css" rel="stylesheet"/><![endif]-->
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><script src="~/Scripts/respond.min.js"></script><![endif]-->
</head>
<body data-spy="scroll" data-target=".bs-docs-sidebar" data-twttr-rendered="true">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
                <div style="line-height: 40px; padding-right: 5px; padding-top: 6px;" class="pull-left">
                    <img src="~/Images/logomini.png" />
                </div>
                <a class="brand" href="~/Home/Index" alt="金硕源logo">金硕源CRM</a>
                <div class="nav-collapse collapse">
                    <ul class="nav" id="menu_nav">
                        @foreach (JSYCRM.Models.z_menu item in ViewBag.z_menu_list)
                        { 
                            if (item.DESCRIPTION == JSYCRM.Common.Variables.MENU_ON_TOP_NAV)
                            { 
                                <li><a href="@(item.VALUE)">@(item.NAME)</a></li>
                            }
                        }
                    </ul>
                    <ul class="nav pull-right">
                        <li style="width: auto; margin-right: 5px;"><a style="padding: 10px 0px; width: auto; color: #9fc71c"><i class="icon-user"></i>@(ViewBag.model_z_user.LAST_NAME)</a></li>
                        <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown" style="padding: 10px;">系统<b class="caret"></b></a><ul class="dropdown-menu">
                            @foreach (JSYCRM.Models.z_menu item in ViewBag.z_menu_list)
                            { 
                                if (item.DESCRIPTION == JSYCRM.Common.Variables.MENU_ON_SYS_NAV)
                                {
                                    if (item.NAME == "退出")
                                    { 
                                        <li class="divider"></li>
                                    }
                                    <li><a href="@(item.VALUE)">@(item.NAME)</a></li>
                                }
                            }
                        </ul>
                        </li>
                    </ul>
                </div>
                <script type="text/javascript">
                    function setActiveMenu() {
                        var url = window.location.href;
                        url = url.split("/");
                        url = url[3];
                        $("#menu_nav").find("a[href*= " + url + "]").parent().attr("class", "active");
                    }
                    setActiveMenu();
                </script>
            </div>
        </div>
    </div>
    <script src="~/Scripts/PCASClass.js" type="text/javascript"></script>
    <div class="container">
        @RenderBody()

    </div>

</body>
</html>
