@model IEnumerable<JSYCRM.Models.m_worker>

@{
    ViewBag.Title = "我的工友";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    span.work_status1 {
        background-color:#999966;
        display:block;
        padding:1px;
        width:60px;
    }
    span.work_status2 {
        background-color:#FFCC66;
        display:block;
        padding:1px;
        width:60px;
    }
    span.work_status3 {
        background-color:#CC0066;
        color:white;
        display:block;
        padding:1px;
        width:60px;
    }
    span.work_status4 {
        background-color:#3333FF;
        color:white;
        display:block;
        padding:1px;
        width:60px;
    }
    span.work_status5 {
        background-color:#006600;
        color:white;
        display:block;
        padding:1px;
        width:60px;
    }
    span.work_status6 {
        background-color:#FF0000;
        display:block;
